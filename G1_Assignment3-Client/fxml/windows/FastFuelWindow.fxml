<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiClient.FastFuelWindow">
   <children>
      <AnchorPane layoutX="43.0" layoutY="39.0" prefHeight="576.0" prefWidth="1014.0">
         <children>
            <Label fx:id="lblPrice" layoutX="409.0" layoutY="202.0" text="0.00">
               <font>
                  <Font size="96.0" />
               </font>
            </Label>
            <Label layoutX="445.0" layoutY="333.0" text="Dollar Per Liter">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="lblFuelType" layoutX="305.0" layoutY="75.0" text="Fuel Type">
               <font>
                  <Font size="96.0" />
               </font>
            </Label>
            <Label layoutX="453.0" layoutY="358.0" text="(after discounts)" />
            <Label fx:id="lblContinue" layoutX="157.0" layoutY="391.0" text="Please Continue">
               <font>
                  <Font size="96.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutY="26.0" prefHeight="251.0" prefWidth="325.0" styleClass="grid-pane" stylesheets="@../pics/gridPaneStyle.css">
         <children>
            <Button fx:id="btnEmulate" layoutX="56.0" layoutY="200.0" mnemonicParsing="false" onAction="#btnEmulatePressed" prefHeight="30.0" prefWidth="200.0" styleClass="task-button" stylesheets="@../pics/style.css" text="Emulate" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="20.0" />
               </font>
            </Button>
            <Label layoutX="20.0" layoutY="12.0" text="Fast Fuel Emulator" textFill="#144465" underline="true">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="51.0" text="Registration Plate">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tfRegPlate" layoutX="166.0" layoutY="46.0" prefHeight="30.0" prefWidth="149.0" promptText="*" />
            <Label layoutX="19.0" layoutY="99.0" text="Fuel Station Name">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tfFuelStation" layoutX="165.0" layoutY="94.0" prefHeight="30.0" prefWidth="149.0" promptText="*" />
            <Label layoutX="19.0" layoutY="148.0" text="Amount Fueled">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tfAmount" layoutX="165.0" layoutY="143.0" prefHeight="30.0" prefWidth="149.0" promptText="* Liter" />
         </children>
      </AnchorPane>
      <VBox prefHeight="56.0" prefWidth="1100.0">
         <children>
            <AnchorPane fx:id="titleBar" onMouseDragged="#dragTopBar" onMousePressed="#clickOnTopBar" styleClass="linear-grad-to-top" stylesheets="@../pics/style.css">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="3.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../pics/logo_mini.png" />
                     </image>
                  </ImageView>
                  <Label layoutX="27.0" layoutY="7.0" text="MyFuel" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Calibri Bold" size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnExit" layoutX="1045.0" minWidth="-Infinity" mnemonicParsing="false" onAction="#closeTopBar" prefHeight="25.0" prefWidth="55.0" styleClass="exit-button" stylesheets="@../pics/style.css">
                     <graphic>
                        <ImageView fitHeight="17.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../pics/close.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnMini" layoutX="994.0" mnemonicParsing="false" onAction="#minimizeTopBar" prefHeight="25.0" prefWidth="50.0" styleClass="minimize-button" stylesheets="@../pics/style.css">
                     <graphic>
                        <ImageView fitHeight="11.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../pics/minimize.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
